<?xml version="1.0"?>

<PropertyList>

  <path>taipei-101-fb.ac</path>

<animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-property>sim/rendering/static-lod/bare</max-property>
  </animation>
	
  <animation> 
    <type>textranslate</type> 
    <object-name>Base</object-name> 
    <object-name>Podium</object-name> 
    <object-name>Plane.001</object-name>
    <object-name>Plane.002</object-name>
    <object-name>Plane.003</object-name>
    <object-name>Plane.004</object-name>
    <object-name>Plane.005</object-name>
    <object-name>Plane.006</object-name>
    <object-name>Plane.007</object-name>
    <object-name>Plane.008</object-name>
    <object-name>Plane.009</object-name>
    <object-name>Plane.010</object-name>
    <object-name>Plane</object-name>
    <object-name>DoorDay</object-name>
    <object-name>DoorNight</object-name>
    <object-name>ColNight</object-name>
    <object-name>Podium.014</object-name>
    <object-name>ColBase</object-name>


    <property>/sim/time/sun-angle-rad</property>
    <step> 1.57 </step>
    <factor>0.318471338</factor>
    <center>
     <x-m> 0 </x-m>
     <y-m> 0 </y-m>
     <z-m> 0 </z-m>
    </center>
    <axis> 
      <x> -1 </x> 
      <y>  0 </y> 
      <z>  0 </z> 
    </axis> 
  </animation>

  <animation>
    <type>material</type>
    <object-name>Base</object-name> 
    <object-name>Podium</object-name> 
    <object-name>Plane.001</object-name>
    <object-name>Plane.002</object-name>
    <object-name>Plane.003</object-name>
    <object-name>Plane.004</object-name>
    <object-name>Plane.005</object-name>
    <object-name>Plane.006</object-name>
    <object-name>Plane.007</object-name>
    <object-name>Plane.008</object-name>
    <object-name>Plane.009</object-name>
    <object-name>Plane.010</object-name>
    <object-name>Plane</object-name>
    <object-name>DoorDay</object-name>
    <object-name>DoorNight</object-name>
    <object-name>ColNight</object-name>
    <object-name>Podium.014</object-name>
    <object-name>ColBase</object-name>

    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   1.0 </red>
      <green> 1.0 </green>
      <blue>  1.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Base</object-name> 
    <object-name>Podium</object-name> 
    <object-name>Plane.001</object-name>
    <object-name>Plane.002</object-name>
    <object-name>Plane.003</object-name>
    <object-name>Plane.004</object-name>
    <object-name>Plane.005</object-name>
    <object-name>Plane.006</object-name>
    <object-name>Plane.007</object-name>
    <object-name>Plane.008</object-name>
    <object-name>Plane.009</object-name>
    <object-name>Plane.010</object-name>
    <object-name>Plane</object-name>
    <object-name>DoorDay</object-name>
    <object-name>DoorNight</object-name>
    <object-name>ColNight</object-name>
    <object-name>Podium.014</object-name>
    <object-name>ColBase</object-name>

    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

<animation>
    
<type>range</type>
    
<min-m>0</min-m>
    
<max-property>sim/rendering/static-lod/bare</max-property>
  
</animation>

	
  
</PropertyList>

